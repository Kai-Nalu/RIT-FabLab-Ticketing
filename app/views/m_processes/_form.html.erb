<%= form_with model: m_process do |f| %>
	<div class="row g-3">
		<div class="col-12">
			<%= f.label :name, class: "form-label" %>
			<%= f.text_field :name, class: "form-control" %>
		</div>
		<div class="col-2">
			<div class="form-check">
				<%= f.check_box :is_active, class: "form-check-input" %>
				<%= f.label :is_active, class: "form-label" %>
			</div>
		</div>
		<div class="col-4">
			<%= f.label :units, class: "form-label" %>
			<%= f.text_field :units, class: "form-control" %>
		</div>
		<div class="col-6">
			<%= f.label :time_cost, class: "form-label" %>
			<div class="input-group">
				<span class="input-group-text">$</span>
				<%= f.number_field :time_cost, class: "form-control", min: "0", step: "0.01" %>
				<span class="input-group-text">/hr</span>
			</div>
		</div>
		<div class="col-12">
			<%= f.submit class: "btn btn-primary" %>
		</div>
	</div>
<% end %>