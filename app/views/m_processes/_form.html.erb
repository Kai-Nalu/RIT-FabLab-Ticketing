<%= form_with model: m_process do |f| %>
	<div class="row g-3">
		<div class="col-12">
			<div class="form-floating">
				<%= f.text_field :name, class: "form-control", placeholder: "" %>
				<%= f.label :name, class: "form-label" %>
			</div>
		</div>
		<div class="col-2 align-self-center">
			<div class="form-check">
				<%= f.check_box :is_active, class: "form-check-input" %>
				<%= f.label :is_active, class: "form-label" %>
			</div>
		</div>
		<div class="col-3">
			<div class="form-floating">
				<%= f.text_field :units, class: "form-control", placeholder: "" %>
				<%= f.label :units, class: "form-label" %>
			</div>
		</div>
		<div class="col-7">
			<div class="input-group">
				<span class="input-group-text">$</span>
				<div class="form-floating">
					<%= f.number_field :time_cost, class: "form-control", min: "0", step: "0.01", placeholder: "0.00" %>
					<%= f.label :time_cost, class: "form-label" %>
				</div>
				<span class="input-group-text">/hr</span>
			</div>
		</div>
		<div class="col-12">
			<%= f.submit class: "btn btn-primary" %>
		</div>
	</div>
<% end %>