<%= form_with model: status do |f| %>
	<div class="row g-3">
		<div class="col-12">
			<div class="form-floating">
				<%= f.text_field :name, class: "form-control", placeholder: "" %>
				<%= f.label :name, class: "form-label" %>
			</div>
		</div>
		<div class="col-12">
			<%= f.submit class: "btn btn-primary" %>
		</div>
	</div>
<% end %>