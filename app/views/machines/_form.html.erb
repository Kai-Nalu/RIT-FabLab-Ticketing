<h2><%= m_process.name %> Machine</h2>
<%= form_with model: machine do |f| %>
	<div class="row g-3">
		<div class="col-12">
			<%= f.label :name, class: "form-label" %>
			<%= f.text_field :name, class: "form-control" %>
		</div>
		<div class="col-12">
			<%= f.label :time_cost, class: "form-label" %>
			<div class="input-group">
				<span class="input-group-text">$</span>
				<%= f.number_field :time_cost, class: "form-control", min: "0", step: "0.01" %>
				<span class="input-group-text">/hr</span>
			</div>
		</div>
		<div class="col-12">
			<%= f.hidden_field :m_process_id, value: m_process.id %>
			<%= f.submit class: "btn btn-primary" %>
		</div>
	</div>
<% end %>