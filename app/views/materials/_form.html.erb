<h3><%= m_process.name %> Material</h3>
<%= form_with model: material do |f| %>
	<div class="row g-3">
		<div class="col-12">
			<%= f.label :name, class: "form-label" %>
			<%= f.text_field :name, class: "form-control" %>
		</div>
		<div class="col-2">
			<div class="form-check">
				<%= f.check_box :in_stock, class: "form-check-input" %>
				<%= f.label :in_stock, class: "form-label" %>
			</div>
		</div>
		<div class="col-10">
			<%= f.label :quantity_cost, class: "form-label" %>
			<div class="input-group">
				<span class="input-group-text">$</span>
				<%= f.number_field :quantity_cost, class: "form-control", min: "0", step: "0.01" %>
				<span class="input-group-text">/<%= m_process.units %></span>
			</div>
		</div>
		<div class="col-12">
			<%= f.hidden_field :m_process_id, value: m_process.id %>
			<%= f.submit class: "btn btn-primary" %>
		</div>
	</div>
<% end %>